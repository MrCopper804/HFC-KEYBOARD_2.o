<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HFC KEYBOARD"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#00D9FF"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Real-Time Symbol Replacement"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp" />

        <!-- Keyboard Settings -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KEYBOARD CONFIGURATION"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#888888"
            android:letterSpacing="0.2"
            android:layout_marginBottom="16dp" />

        <!-- HFC Mode Switch -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:tint="#00D9FF" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="HFC Cipher Mode"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="16dp" />

                <Switch
                    android:id="@+id/switchHfcMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Real-time symbol replacement. When enabled, every letter typed is instantly replaced with its HFC symbol equivalent."
            android:textSize="12sp"
            android:textColor="#888888"
            android:background="#0D0D0D"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Audio & Haptics -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AUDIO & HAPTICS"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#888888"
            android:letterSpacing="0.2"
            android:layout_marginBottom="16dp" />

        <!-- Sound Switch -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_lock_silent_mode_off"
                    android:tint="#00D9FF" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Keypress Sound"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="16dp" />

                <Switch
                    android:id="@+id/switchSound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Vibration Switch -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_feedback"
                    android:tint="#00D9FF" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Keypress Vibration"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="16dp" />

                <Switch
                    android:id="@+id/switchVibration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Appearance -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APPEARANCE"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#888888"
            android:letterSpacing="0.2"
            android:layout_marginBottom="16dp" />

        <!-- Theme Switch -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_day"
                    android:tint="#00D9FF" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dark Theme"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="16dp" />

                <Switch
                    android:id="@+id/switchTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Cipher Preview -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CIPHER PREVIEW"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#888888"
            android:letterSpacing="0.2"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:id="@+id/layoutPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1A1A1A"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/txtPreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HELLO â†’ | = < < ()"
                android:textSize="14sp"
                android:textColor="#00FF00"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Enable Keyboard Button -->
        <Button
            android:id="@+id/btnEnableKeyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ENABLE KEYBOARD"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#00D9FF"
            android:textColor="#0D0D0D"
            android:padding="16dp"
            android:layout_marginBottom="12dp" />

        <!-- Select Keyboard Button -->
        <Button
            android:id="@+id/btnSelectKeyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SELECT KEYBOARD"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#00FF00"
            android:textColor="#0D0D0D"
            android:padding="16dp"
            android:layout_marginBottom="12dp" />

        <!-- Reset Button -->
        <Button
            android:id="@+id/btnReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESET TO DEFAULT"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#FF006E"
            android:textColor="#FFFFFF"
            android:padding="16dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp" />
    </LinearLayout>
</ScrollView>
